<% config['ssh'].each do |host| %>
  Host <%= host['name'] %>
  HostName <%= host['host'] %>
  User <%= host['user'] %>

  <% if host['identity'] %>
    IdentityFile <%= host['identity'] %>
  <% end %>

  <% if host['forwardx11'] %>
    ForwardX11 <%= host['forwardx11'] %>
  <% end %>

  <% if host['port'] %>
    Port <%= host['port'] %>
  <% end %>

  <% if host['alive'] %>
    <% if host['alive']['interval'] %>
      ServerAliveInterval <%= host['alive']['interval'] %>
    <% end %>

    <% if host['alive']['count'] %>
      ServerAliveCountMax <%= host['alive']['count'] %>
    <% end %>
  <% end %>

<% end %>